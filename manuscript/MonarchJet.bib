issn = {13541013},
journal = {Global Change Biology},
keywords = {Breeding habitat,Danaus plexippus,Growing degree day,Palmer drought index,Phenology,Poisson regression model,Return migration},
number = {10},
pages = {3039--3049},
title = {{Tracking climate impacts on the migratory monarch butterfly}},
volume = {18},
year = {2012}
}
