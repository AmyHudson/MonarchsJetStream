journal = {Ecological Entomology},
keywords = {Abies religiosa fir forest ecosystem,Cryobiology,Mexico,Sierra Chincua,Transverse Neovolcanic Belt,deforestation,endangered biological phenomenon,evolutionary advantage of clusters,experimental study,forest thinning,high altitude microclimate,monarch butterfly,overwintering survival of Danaus plexippus,synergistic interaction of exposure and wetting},
number = {2},
pages = {107--116},
title = {{Freeze-protection of overwintering monarch butterflies in Mexico: critical role of the forest as a blanket and an umbrella}},
url = {https://resjournals.onlinelibrary.wiley.com/doi/abs/10.1111/j.1365-2311.1996.tb01177.x},
